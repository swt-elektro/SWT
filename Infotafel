<script>
    // Uhr
    function updateClock() {
        const now = new Date();
        document.getElementById("time").textContent = now.toLocaleTimeString('de-DE');
        document.getElementById("date").textContent = now.toLocaleDateString('de-DE');
    }
    setInterval(updateClock, 1000);
    updateClock();

    // Wetter (OpenWeatherMap)
    const apiKey = "DEIN_API_KEY"; // später ändern
    const city = "Taunusstein";

    fetch(`https://api.openweathermap.org/data/2.5/weather?q=${city}&units=metric&lang=de&appid=${apiKey}`)
        .then(response => response.json())
        .then(data => {
            document.getElementById("weather").textContent =
                `${data.main.temp}°C – ${data.weather[0].description}`;
        })
        .catch(() => {
            document.getElementById("weather").textContent = "Keine Wetterdaten verfügbar";
        });
</script>

